.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-body
        = simple_form_for [current_user], :remote => true do |c|
          .image-upload
            %label{:for => "user_avatar"}
              %div.image_upload_show
            = c.input :avatar, :label => "", input_html: {class: 'form-control'}, :onchange => "$(this).parents('form').submit();"
= render 'load_pics', locals: { pics: @pics }